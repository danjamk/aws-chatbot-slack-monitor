# AWS Credentials and Account Configuration
# IMPORTANT: Copy this file to .env and fill in your actual values
# The .env file is gitignored and will not be committed

# AWS Account Configuration
AWS_ACCESS_KEY_ID=AKIA...
AWS_SECRET_ACCESS_KEY=...
AWS_DEFAULT_REGION=us-east-1
CDK_DEFAULT_ACCOUNT=123456789012
CDK_DEFAULT_REGION=us-east-1

# Slack Configuration
# Get workspace ID from: https://app.slack.com/client/T01234ABCDE/... (the T... part)
SLACK_WORKSPACE_ID=T01234ABCDE

# Get channel IDs from: Right-click channel → View channel details → Channel ID at bottom
SLACK_CRITICAL_CHANNEL_ID=C01234ABCDE
SLACK_HEARTBEAT_CHANNEL_ID=C01234FGHIJ

# Slack Webhook URLs (for AI Alert System)
# Create webhooks at: https://api.slack.com/apps → Your App → Incoming Webhooks
SLACK_CRITICAL_WEBHOOK=https://hooks.slack.com/services/T.../B.../xxx
SLACK_HEARTBEAT_WEBHOOK=https://hooks.slack.com/services/T.../B.../yyy

# Email Notifications (optional)
# Comma-separated list of email addresses for budget alerts
NOTIFICATION_EMAILS=team@example.com,devops@example.com

# AI/LLM Configuration (for Phase 1: AI Alert System)
# Options: bedrock (AWS Bedrock), anthropic (Direct Anthropic API)
LLM_PROVIDER=bedrock

# Claude model ID for AWS Bedrock
# Options: anthropic.claude-3-5-sonnet-20250514-v2:0, anthropic.claude-3-haiku-20240307-v1:0
LLM_MODEL_ID=anthropic.claude-3-5-sonnet-20250514-v2:0

# LLM Temperature (0.0 = deterministic, 1.0 = creative)
LLM_TEMPERATURE=0.3

# Maximum tokens for LLM responses (affects cost)
LLM_MAX_TOKENS=2000

# Anthropic API Key (only needed if LLM_PROVIDER=anthropic)
# ANTHROPIC_API_KEY=sk-ant-...

# Environment Configuration
# Options: personal-dev, startup-prod, prod
ENVIRONMENT=personal-dev

# Debug Mode (set to true for verbose logging)
DEBUG=false
